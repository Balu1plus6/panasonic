pipeline {
    agent any
    environment {
        AWS_ACCOUNT_ID="007242146314"
        AWS_DEFAULT_REGION="us-east-1"
        IMAGE_REPO_NAME="lenovo1"
        REPOSITORY_URI="007242146314.dkr.ecr.us-east-1.amazonaws.com/lenovo1"
    }

    stages {
      stage('Execute AWS CLI Commands') {
    steps {
        script {
                    sh """aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com"""
                }
        script {
            def TagValue = sh(
                returnStdout: true,
                script: "aws ecr describe-images --repository-name ${IMAGE_REPO_NAME} --query 'imageDetails[*].imageTags' --output text|xargs -n1 | sort -V |tail -1"
            ).trim()

            echo "${TagValue}"

            def tagComponents = TagValue.tokenize('.')
            def updateValue = tagComponents.last()

            def firstValue = tagComponents.first()
            def lastValue

            if (updateValue == "9") {
                firstValue = (firstValue as Integer) + 1
                lastValue = "0"
            } else {
                lastValue = (updateValue as Integer) + 1
            }

            def LAST_TAG = "${firstValue}.${lastValue}"

            echo "UpdatedValue: ${updateValue}"
            echo "tag_first_value: ${firstValue}"
            echo "LASTTAG: ${LAST_TAG}"

            // Export updateValue as an environment variable for use in other stages
            env.updateValue = updateValue
            env.firstValue = firstValue.toString()
            env.lastValue = lastValue.toString()
            env.LAST_TAG = LAST_TAG
        }
    }
}
        stage('Building Docker Image') {
            steps {
                script {
                    // Access the updateValue environment variable
                    //echo "This is the updated tag value: ${env.updateValue}"
					//echo "This is the Last tag value: ${env.lastValue}"
                    //echo "This is the first tag value: ${env.firstValue}"
                    //echo "This is the Last tag value: ${env.LAST_TAG}"
					dockerImage = docker.build "${IMAGE_REPO_NAME}:${env.LAST_TAG}"
					
                    
                }
            }
        }
		
        stage('Pushing to ECR') {
            steps {
                script {
                    sh """docker tag ${IMAGE_REPO_NAME}:${env.LAST_TAG} ${REPOSITORY_URI}:${env.LAST_TAG}"""
                    sh """docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${IMAGE_REPO_NAME}:${env.LAST_TAG}"""
                }
            }
        }
    }
}